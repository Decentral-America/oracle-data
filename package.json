{
  "name": "@decentralchain/oracle-data",
  "version": "0.0.6",
  "description": "Oracle data parsing and encoding utilities for the DecentralChain blockchain",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Decentral-America/oracle-data"
  },
  "homepage": "https://github.com/Decentral-America/oracle-data#readme",
  "bugs": {
    "url": "https://github.com/Decentral-America/oracle-data/issues"
  },
  "keywords": [
    "decentralchain",
    "oracle",
    "blockchain",
    "data"
  ],
  "scripts": {
    "build": "tsc && NODE_ENV=production webpack --env.production --env.platform=web",
    "format": "prettier --write \"src/**/*.{ts,json}\" \"test/**/*.{ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json}\" \"test/**/*.{ts,json}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "bulletproof": "npm run format && npm run lint:fix && npm run typecheck",
    "bulletproof:check": "npm run format:check && npm run lint && npm run typecheck",
    "postpublish": "git push",
    "postversion": "npm publish",
    "test": "jest",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/jest": "^29.5.14",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "collectCoverage": true,
    "testEnvironment": "jest-environment-node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.+(ts|tsx|js)"
    ]
  }
}
